{{!< default}}
<!-- post.hbs -->
<h3>post.hbs</h3>
{{#post}}
  <ul>
    <li><b>image</b>: {{image}}</li>
    <li><b>post_class</b>: {{post_class}}</li>
    <li><b>title</b>: {{title}}</li>
    <li><b>date</b>: {{date format="YYYY-MM-DD"}}</li>
    <li><b>content</b>: {{content}}</li>
    <li><b>author</b>: {{author}}</li>
    <li><b>url</b>: {{url}}</li>
    <li><b>
  </ul>
  {{#if @labs.subscribers}}
  <div>
    <h4>Subscribe to {{@blog.title}}</h4>
    <p>Get the latest posts delivered right to your inbox.</p>
    {{subscribe_form placeholder="Your email address"}}
    <span class="gh-subscribe-rss">or subscribe <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/">via RSS</a> with Feedly!</span>
  </div>
  {{/if}}
  {{#next_post}}<a href="{{url}}">{{title}}&hellip;</a>{{/next_post}}
  {{#prev_post}}<a href="{{url}}">{{title}}&hellip;</a>{{/prev_post}}
{{/post}}
